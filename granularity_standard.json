{
  "metadata": {
    "title": "数学知识图谱颗粒度标准",
    "description": "定义知识点提取的层级结构和标准格式",
    "version": "1.0",
    "created_date": "2024-01-01"
  },
  "granularity_levels": {
    "level_1_chapter": {
      "name": "章（Chapter）",
      "description": "教材中的大章节单位",
      "identifier_format": "{version_code}-CH{chapter_number:02d}",
      "example": "RJ-7-01-CH01"
    },
    "level_2_section": {
      "name": "节（Section）",
      "description": "章内的小节，如1.1、1.2",
      "identifier_format": "{chapter_id}-SEC{section_number:02d}",
      "example": "RJ-7-01-CH01-SEC01"
    },
    "level_3_knowledge_point": {
      "name": "知识点（原子级）",
      "description": "不可再分的最小知识单元",
      "identifier_format": "{section_id}-KP{point_number:03d}",
      "example": "RJ-7-01-CH01-SEC01-KP001"
    },
    "level_4_details": {
      "name": "细节（Details）",
      "description": "知识点的具体内容要素",
      "components": [
        "definition",
        "properties",
        "examples",
        "notes",
        "page_ref"
      ]
    }
  },
  "knowledge_point_structure": {
    "required_fields": [
      {
        "field": "concept",
        "type": "string",
        "description": "概念名（教材黑体字）",
        "required": true,
        "example": "相反数"
      },
      {
        "field": "definition",
        "type": "string",
        "description": "定义（教材原话或准确概括，禁止发挥）",
        "required": true,
        "example": "只有符号不同的两个数叫做互为相反数"
      },
      {
        "field": "properties",
        "type": "array",
        "description": "性质/法则（分点列出，含适用条件）",
        "required": true,
        "example": [
          "0的相反数是0",
          "互为相反数的两个数之和为0"
        ]
      },
      {
        "field": "examples",
        "type": "array",
        "description": "教材例题类型",
        "required": true,
        "example": [
          "例1：识别相反数",
          "例2：求一个数的相反数"
        ]
      },
      {
        "field": "page_ref",
        "type": "string",
        "description": "页码范围（格式：Pxx-Pxx，不确定标[待查]）",
        "required": true,
        "example": "P10-P12"
      },
      {
        "field": "verified",
        "type": "boolean",
        "description": "是否已通过教材核实",
        "required": true,
        "example": false
      }
    ],
    "optional_fields": [
      {
        "field": "notes",
        "type": "string",
        "description": "注意事项或易错点"
      },
      {
        "field": "prerequisites",
        "type": "array",
        "description": "前置知识点"
      },
      {
        "field": "related_points",
        "type": "array",
        "description": "相关知识点"
      }
    ]
  },
